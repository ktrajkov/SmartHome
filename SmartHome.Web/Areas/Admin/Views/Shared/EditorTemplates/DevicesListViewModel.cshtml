@model SmartHome.Web.Areas.Admin.Models.DevicesListViewModel
<h3>Devices</h3>
<br />
<p>
    @Html.ActionLink("Create New Device", "Create", "Devices", new { RoomId = Model.RoomId }, null)
</p>
@if (Model.Devices.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Devices.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Devices.FirstOrDefault().State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Devices.FirstOrDefault().AttachedPin)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Devices)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AttachedPin)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Devices", new { id = item.Id }, null) |
                    @Html.ActionLink("Delete", "Delete", "Devices", new { id = item.Id }, null)
                </td>
            </tr>
        }

    </table>
}
