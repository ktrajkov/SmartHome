}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SensorViewModel.AttachedPin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SensorViewModel.CurrentTemp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SensorViewModel.ArduinoArraySensorsId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SensorViewModel.AlarmCheck)
