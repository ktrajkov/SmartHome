            <th></th>
        </tr>

        <tr>
            <td>
                @Html.DisplayFor(model => model.SensorViewModel.AttachedPin)
            </td>
            <td>
                @Html.DisplayFor(model => model.SensorViewModel.CurrentTemp)
            </td>
            <td>
                @Html.DisplayFor(model => model.SensorViewModel.ArduinoArraySensorsId)
            </td>
            <td>
                @Html.DisplayFor(model => model.SensorViewModel.AlarmCheck)
            </td>
            <td>
                @Html.DisplayFor(model => model.SensorViewModel.MinTempAlert)
            </td>
            <td>
                @Html.DisplayFor(model => model.SensorViewModel.MaxTempAlert)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Sensors", new { id = Model.SensorViewModel.Id }, null) |
                @Html.ActionLink("Delete", "Delete", "Sensors", new { id = Model.SensorViewModel.Id }, null)
